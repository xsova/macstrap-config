#!/bin/sh

# Make vim the default editor.
export EDITOR='hx';

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8';
export LC_ALL='en_US.UTF-8';

# Highlight section titles in manual pages.
export LESS_TERMCAP_md="${yellow}";

# Donâ€™t clear the screen after quitting a manual page.
export MANPAGER='less -X';

# Export JDK environment variable used for build
export JDK8=$(asdf where java liberica-8u362+9)
export JDK11=$(asdf where java liberica-11.0.16+8)
export JDK16=$(asdf where java liberica-16.0.2+7)
export JDK17=$(asdf where java liberica-17.0.6+10)
export JDK18=$(asdf where java liberica-18.0.2.1+1)
